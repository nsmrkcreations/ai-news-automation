# API Keys and Rate Limits
NEWS_API_KEY=your_newsapi_org_key_here
NEWS_API_RATE_LIMIT_CALLS=100
NEWS_API_RATE_LIMIT_WINDOW=86400

# Update Intervals
NEWS_UPDATE_INTERVAL=30
BREAKING_NEWS_UPDATE_INTERVAL=5

# Categories
DEFAULT_CATEGORIES=technology,business,science
PRIORITY_CATEGORIES=technology,business

# News Settings
NEWS_REFRESH_INTERVAL=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/news_automation.log

# AI Service Configuration
OLLAMA_MODEL=llama2
OLLAMA_URL=http://localhost:11434/api/generate

# GitHub Pages
GITHUB_PAGES_URL=https://nsmrkcreations.github.io/ai-news-automation/
AUTO_DEPLOY=true

# Error Monitoring
ERROR_LOG_FILE=logs/errors.json
MAX_RETRIES=3
RETRY_DELAY=5

# Service Health
HEALTH_CHECK_INTERVAL=300
MAX_CONSECUTIVE_FAILURES=5

# Web App
PORT=5000
HOST=localhost
